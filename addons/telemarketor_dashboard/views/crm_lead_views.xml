<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_crm_lead_tree" model="ir.actions.act_window">
        <field name="name">Leads</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_type': 'lead'}</field>
    </record>

    <record id="view_crm_lead_tree_tele" model="ir.ui.view">
        <field name="name">crm.lead.tree.tele</field>
        <field name="model">crm.lead</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="company_name"/>
                <field name="full_name"/>
                <field name="phone_number"/>
                <field name="assigned_user_id"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_crm_lead_form_tele" model="ir.ui.view">
        <field name="name">crm.lead.form.tele</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group>
                    <field name="company_name"/>
                    <field name="company_type"/>
                    <field name="full_name"/>
                    <field name="phone_number"/>
                    <field name="email_from"/>
                    <field name="assigned_user_id"/>
                    <field name="campaign_id"/>
                </group>
                <group>
                    <button name="action_convert_to_opportunity" type="object" string="Convert to Tele Opportunity" class="btn-primary"/>
                </group>
            </xpath>
            <!-- Add timeline (encounters) -->
            <xpath expr="//notebook" position="inside">
                <page string="Encounters">
                    <field name="tele_opportunity_id" widget="many2one"/>
                    <field name="message_ids" widget="mail_thread"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
