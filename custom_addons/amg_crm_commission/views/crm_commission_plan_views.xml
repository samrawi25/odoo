<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_crm_commission_plan_tree" model="ir.ui.view">
        <field name="name">crm.commission.plan.tree</field>
        <field name="model">crm.commission.plan</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="commission_rate" widget="percentage"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="action_crm_commission_plan" model="ir.actions.act_window">
        <field name="name">Commission Plans</field>
        <field name="res_model">crm.commission.plan</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem
        id="menu_crm_commission_plan"
        name="Commission Plans"
        parent="sale.menu_sale_config"
        action="action_crm_commission_plan"
        sequence="50"/>
</odoo>