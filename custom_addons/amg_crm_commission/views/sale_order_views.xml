<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_commission" model="ir.ui.view">
        <field name="name">sale.order.form.commission</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page string="Commissions" name="commissions">
                    <field name="commission_record_ids" readonly="1">
                        <tree editable="false">
                            <field name="salesperson_id" string="Salesperson"/>
                            <field name="commission_amount" string="Commission Amount"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="state" string="Status" widget="badge"/>
                            <field name="invoice_id" string="Invoice"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>